<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/TV_D"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:ellipsize="start"
        android:gravity="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/TV_R"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Txt_clear"
                style="@style/ActionButtonStyle"
                android:backgroundTint="#FF1100"
                android:text="CE"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Txt_open"
                style="@style/ActionButtonStyle"
                android:backgroundTint="#CDCDCD"
                android:text="("
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Txt_close"
                style="@style/ActionButtonStyle"
                android:backgroundTint="#CDCDCD"
                android:text=")"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Txt_div"
                style="@style/ActionButtonStyle"
                android:backgroundTint="#FF9800"
                android:text="/"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Txt_seven"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="7"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_eight"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="8"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_nine"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="9"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_mul"
                style="@style/ActionButtonStyle"
                android:backgroundTint="#FF9800"
                android:text="X"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="25sp">

            <TextView
                android:id="@+id/Txt_four"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="4"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_five"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="5"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_six"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="6"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_minus"
                style="@style/ActionButtonStyle"
                android:backgroundTint="#FF9800"
                android:text="-"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Txt_one"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_two"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="2"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_three"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="3"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Txt_plus"
                style="@style/ActionButtonStyle"
                android:backgroundTint="#FF9800"
                android:text="+"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="25sp">

            <TextView
                android:id="@+id/Txt_Dot"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="."
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Txt_Zero"
                style="@style/NumberButtonStyle"
                android:background="#000000"
                android:text="0"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/Txt_Back"
                style="@style/NumberButtonStyle"
                android:background="#EB5151"
                android:scaleType="center"
                android:src="@drawable/backspace" />

            <TextView
                android:id="@+id/Txt_Equal"
                style="@style/NumberButtonStyle"
                android:background="@color/actionButton"
                android:backgroundTint="#FF9800"

                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="45dp"

                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>